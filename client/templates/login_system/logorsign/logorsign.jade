template(name='logorsign') 
  if resetPassword
    +ResetPassword
  else
    .login-screen.modal-in
      .view
        .page
          .page-content.login-screen-content
            .login
              p
                a(href="{{pathFor 'login'}}")
                  img.llamada(src="/img/login.svg")
                  br
                  |LOG IN
            .sign-up
              p
                a(href="{{pathFor 'createAccount'}}")
                  img.llamada(src="/img/sign-up.svg")
                  br
                  |SIGN UP
template(name="ResetPassword")
  .login-screen.modal-in
    .view
      .page
        .page-content.login-screen-content
          .login-screen-title
            img.trazo-login(src="/img/trazo-logo.svg")
            p Reset your password
          p.text-center.text-white Enter a new password and confirm it
          form
            .list-block
              ul
                li.item-content
                  .item-inner                 
                    .item-input
                      input.input-app-1(type='password', id='resetPasswordPassword', name='password', placeholder='Password')
                      input.input-app-1(type='password', id='resetPasswordPasswordConfirm', name='passwordConfirm', placeholder='Confirm')           
            .list-block
              ul
                li
                  input.item-link.list-button.button.ripple-blue.button-big.button-fill.button-raised(type="submit" value="Recover Password")        
              .list-block-label
                a(href="{{pathFor 'login'}}") I already have an account, login.
              .list-block-label
                a(href="{{pathFor 'createAccount'}}") Â¿Don't have an account? lets create one. 